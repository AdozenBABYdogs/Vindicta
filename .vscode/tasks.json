{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile with SQF-VM",
            "type": "process",
            "command": "../tools/SQF-VM/sqfvm.exe",
            "args": [
                "-a",
                "--parse-only",
                "--load",
                ".",
                "-i",
                "${file}",
                "--disable-macro-warnings"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Project_0.Altis"
            },
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "owner": "sqf",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": [
                    {
                        "regexp": "^\\[(RNT|WRN|ERR)\\]\\[L?(.+)\\|C(.+)\\|(.*?)\\](.*)$",
                        "line": 2,
                        "column": 3,
                        "severity": 1,
                        "file": 4,
                        "message": 5
                    }
                ]
            }
        },
        {
            "label": "Run with SQF-VM (sometimes won't work due to unimplemented functions)",
